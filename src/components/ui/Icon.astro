---
type IconName =
  | 'moon'
  | 'sun'

interface Props {
  name: IconName;
  size?: number | string;
  class?: string;
  ariaLabel?: string;
}

const {
  name,
  size,
  class: className = '',
  ariaLabel
} = Astro.props as Props;

const iconSize = size ?? 24;
const ariaHidden = ariaLabel ? undefined : 'true';
const role = ariaLabel ? 'img' : undefined;
---

{name === 'moon' && (
  <svg
    class={className}
    width={iconSize}
    height={iconSize}
    viewBox="0 0 24 24"
    aria-hidden={ariaHidden}
    aria-label={ariaLabel}
    role={role}
    focusable="false"
  >
    <path
      d="M21 12.79A9 9 0 1 1 11.21 3a7 7 0 0 0 9.79 9.79z"
      fill="none"
      stroke="currentColor"
      stroke-width="1.6"
      stroke-linecap="round"
      stroke-linejoin="round"
    />
  </svg>
)}

{name === 'sun' && (
  <svg
    class={className}
    width={iconSize}
    height={iconSize}
    viewBox="0 0 24 24"
    aria-hidden={ariaHidden}
    aria-label={ariaLabel}
    role={role}
    focusable="false"
  >
    <circle
      cx="12"
      cy="12"
      r="4.2"
      fill="none"
      stroke="currentColor"
      stroke-width="1.6"
    />
    <path
      d="M12 2.5v2.5M12 19v2.5M4.2 4.2l1.8 1.8M18 18l1.8 1.8M2.5 12h2.5M19 12h2.5M4.2 19.8l1.8-1.8M18 6l1.8-1.8"
      fill="none"
      stroke="currentColor"
      stroke-width="1.6"
      stroke-linecap="round"
    />
  </svg>
)}